<?php 
$arr = array('a', 'b','c','g','i');
$arr = array_merge($arr, array('e','f')); // it's not a merge sort. just appending.
for($i=0;$i<count($arr);$i++){
	echo $arr[$i]."<br />";
}

echo '<br />';

array_unshift($arr, 'p'); // insert to the first. can't insert as an array.
for($i=0;$i<count($arr);$i++){
	echo $arr[$i]."<br />";
}

echo '<br />;'
array_splice($arr, 3, 0, 'B');
for($i=0;$i<count($arr);$i++){
	echo $arr[$i]."<br />";
}
?>